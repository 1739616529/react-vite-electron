{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "baseUrl": "./package/ts",
        "outDir": "vanilla",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "paths": {
            "main/*": ["electron/main/*"],
            "src/*": ["src/*"],
            "project/*": ["*"]
        }
    },
    "include": ["package/ts/**/*", "package/ts/.electron-vite/*"],
    "exclude": ["node_modules", "package/ts/src/*", "package.json"]
}